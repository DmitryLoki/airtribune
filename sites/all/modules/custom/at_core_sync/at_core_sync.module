 */
function get_races_from_contest_core($core_id) {
  return ATSync::requestToCore('contest/' . $core_id . '/race', FALSE, 'GET');
}

/**
 * Get all paragliders from contest from Core.
 */
function get_paragliders_from_contest_core($core_id) {
