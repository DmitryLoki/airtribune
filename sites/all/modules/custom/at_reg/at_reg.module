  $element['#attached']['js'][1]['data']['password']['good'] = t('Good password.');
  $element['#attached']['js'][1]['data']['password']['strong'] = t('Strong password.');
  $element['#attached']['js'][1]['data']['password']['required'] = t('Password is required.');
