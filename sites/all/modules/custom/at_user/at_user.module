/**
 * Helper for at_user_form_alter
 */
function _sync_user_avatar_and_header(&$form, &$form_state, &$user, AtSyncUser &$sync) {
  $wrapper = entity_metadata_wrapper('user', $user);
  $user_avatar = $wrapper->field_user_avatar->value();
  // Own avatar/header filename has pattern '%fid.extension' (12345.png / 10500.jpg)
  // If filename from Core has another name, different with fid from field,
  // it's means, what user change avatar/header from mobile app.
  if (!empty($form['#core_user_fields']->header)) {
    $api_header = $form['#core_user_fields']->header;
    $api_filename = substr(strrchr($api_header, "/"), 1);
    $api_file_fid = strstr($api_filename, '.', true);
    if ($api_file_fid != $user->field_header_image['und'][0]['fid'] && $api_filename != 'dummy.png') {
      // Get header from api.
      $api_path = at_core_sync_get_api_domain() . '/media/' . $api_header;
      $file_temp = file_get_contents($api_path);
      $file_temp = file_save_data($file_temp, 'public://' . $api_filename, FILE_EXISTS_RENAME);
      // Write new file to user object.
      $wrapper->field_header_image->set( (array) $file_temp );
      $header_result = $wrapper->save();
      // Overload saved file to field in form, need to correct render image and preview.
      $new_file_array = $user->field_header_image['und'][0];
      $form['field_header_image']['und'][0]['#default_value'] = $new_file_array;
      // Write to API with new name.
      $path = drupal_realpath($new_file_array['uri']);
      $sync->upload_image(array('header' => '@' . $path));
    }
  }
  if (!empty($form['#core_user_fields']->avatar) && empty($form_state['values'])) {
    $api_avatar = $form['#core_user_fields']->avatar;
    $api_filename = substr(strrchr($api_avatar, "/"), 1);
    $api_file_fid = strstr($api_filename, '.', true);
    if ($api_file_fid != $user->field_user_avatar['und'][0]['fid'] && $api_filename != 'dummy.png') {
      // Get avatar from api.
      $api_path = at_core_sync_get_api_domain() . '/media/' . $api_avatar;
      $file_temp = file_get_contents($api_path);
      $file_temp = file_save_data($file_temp, 'public://' . $api_filename, FILE_EXISTS_RENAME);
      // Write new file to user object.
      $wrapper->field_user_avatar->set( (array) $file_temp );
      $avatar_result = $wrapper->save();
      // Overload saved file to field in form, need to correct render image and preview.
      $new_file_array = $user->field_user_avatar['und'][0];
      $form['field_user_avatar']['und'][0]['#default_value'] = $new_file_array;
      // Write to API with new name.
      $path = drupal_realpath($new_file_array['uri']);
      $sync->upload_image(array('avatar' => '@' . $path));
    }
  }
}

